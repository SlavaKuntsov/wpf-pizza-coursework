<Application
	x:Class="Pizza.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Application.Resources>

		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<ResourceDictionary
					Source="./Theme/Window.xaml" />

				<ResourceDictionary
					Source="./Theme/MainPage.xaml" />
				
				<ResourceDictionary
					Source="./Theme/Text.xaml" />

				<ResourceDictionary
					Source="./Theme/TextBox.xaml" />

				<ResourceDictionary
					Source="./Theme/MenuButton.xaml" />

				<ResourceDictionary
					Source="./Theme/Button.xaml" />

				<ResourceDictionary
					Source="./Theme/ToggleButton.xaml" />

				<ResourceDictionary
					Source="./Theme/SizeButton.xaml" />
				
				<ResourceDictionary
					Source="./Theme/Page.xaml" />
				
				<ResourceDictionary
					Source="./Theme/ScrollViewer.xaml" />

				<ResourceDictionary
					Source="./Utilities/DataTemplate.xaml" />

			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>

	</Application.Resources>
</Application>